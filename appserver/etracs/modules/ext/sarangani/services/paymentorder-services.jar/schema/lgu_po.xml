<schema adapter="po">
	<element tablename="po">
		<field name="objid" primary="true" prefix="PO" />
		<field name="state" required="true" defaultValue="OPEN" />
		<field name="txnno" required="true" />
		<field name="txndate" required="true" />
		<field name="paidby_objid"  />
		<field name="paidby_name" required="true" caption="Payee"/>
		<field name="paidby_address" required="true" caption="Payee Address"/>
		<field name="amount" required="true" type="decimal" />

		<complex name="items" ref="lgu_po_item" jointype="one-to-many" required="true">
			<key field="objid" target="parent_objid" />
		</complex>
	</element>
</schema>